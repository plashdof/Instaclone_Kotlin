<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profileedit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_profileedit_text_cancel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profileedit_exit"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_profileedittext_header"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 편집"
            android:textColor="@color/insta_black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/btn_profileedit_text_store"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profileedit_check"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"/>


    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/et_profileedit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_profileedit_text"
        android:backgroundTint="@color/insta_skyblue" />

</androidx.constraintlayout.widget.ConstraintLayout>