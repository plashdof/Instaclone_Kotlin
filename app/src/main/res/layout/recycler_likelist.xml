<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recycler_likelist_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="horizontal">


    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp">


        <Button
            android:id="@+id/recycler_likelist_border"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center|top"
            android:background="@drawable/shape_story_unread" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/recycler_likelist_profileimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:background="@drawable/shape_story"
            android:src="@drawable/test_profile" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:gravity="center|start"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recycler_likelist_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="p.real_sound"
            android:textColor="@color/insta_black"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/recycler_likelist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박진성"/>



    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/recycler_likelist_followbtn"
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:text="팔로우"
        android:layout_gravity="center"
        android:background="@drawable/shape_loginbtn_active"
        android:textColor="@color/insta_white"/>



</LinearLayout>