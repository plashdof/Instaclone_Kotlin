<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/story_wholepage"
    android:clickable="true"
    android:background="@color/insta_black">


    <ImageView
        android:id="@+id/iv_recycler_reels"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test_profile"
        android:scaleType="centerCrop"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/recycler_reels_profileimg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/test_profile" />

            <TextView
                android:id="@+id/tv_recycler_reels_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="p.real_sound"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_recycler_reels_follow"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:text="팔로우"
                android:textSize="12sp"
                android:textColor="@color/insta_white"
                android:background="@drawable/shape_noborder"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_recycler_reels_menu"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/story_menu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_recycler_reels_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="comments..."
                android:textColor="@color/insta_white"/>


        </LinearLayout>






    </LinearLayout>








</FrameLayout>